<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="?android:dividerHorizontal"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingBottom="10dp">

        <ImageView android:id="@+id/amount_poured_image"
            android:layout_width="243dp"
            android:layout_height="428dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/progress_0"
            android:contentDescription="Image of beer glass as it fills for dialog"
            />

        <TextView android:id="@+id/amount_poured"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="50sp"
            android:text="0.0 oz"
            android:paddingBottom="20dp" />

    </LinearLayout>

    <Button android:id="@+id/pouring_dialog_dismiss_button"
        style="?android:borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="32sp"
        android:text="Stop"
        android:textAllCaps="true" />

</LinearLayout>
